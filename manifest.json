{
    "name": "Decimal2Binary",
    "description": "Automatic Conversion of Decimal Numbers To Binary",
    "version": "1",
    "manifest_version": 2,
    "author" : "Brain Zheng",
    "icons" : {
        "256" : "icon.png"
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Decimal2Binary",
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "all_frames" : true,
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],

    "permissions": [
        "storage",
        "tabs",
        "<all_urls>"
    ]
}